<% if @user == nil %>
	<h3>No result</h3>
<% else %>
	<table class="table table-hover">
		<thead>
			<tr>
			<th>Avatar</th>
			<th>First name</th>
			<th>Last name</th>
			<th>Email</th>
			<th></th>
			<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td> <img src="<%=@user.avatarpath%>" alt="" class="img-rounded avatar-table"></td>
				<td><%= @user.firstname %></td>
				<td><%= @user.lastname %></td>
				<td><%= @user.email %></td>
			</tr>
		</tbody>
	</table>
<% end %>